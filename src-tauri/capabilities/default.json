{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Default permission set for desktop app",
  "windows": [
    "main"
  ],
  "platforms": [
    "macOS",
    "windows",
    "linux"
  ],
  "remote": {
    "urls": [
      "http://localhost:3000",
      "http://localhost:4545",
      "http://localhost:4455",
      "http://localhost:6000"
    ]
  },
  "permissions": [
    "core:default",
    "os:default",
    "shell:default",
    "http:default",
    "core:window:default",
    "core:window:allow-start-dragging",
    "core:window:allow-toggle-maximize",
    "core:window:allow-internal-toggle-maximize",
    "core:window:allow-minimize",
    "core:window:allow-close",
    "core:window:allow-center",
    "core:window:allow-is-fullscreen",
    "core:window:allow-cursor-position",
    "core:window:allow-current-monitor",
    "core:window:allow-create",
    "core:window:allow-available-monitors",
    "autostart:allow-enable",
    "autostart:allow-disable",
    "autostart:allow-is-enabled",
    "deep-link:default",
    "websocket:default",
    "fs:default",
    "fs:allow-mkdir",
    "dialog:default",
    "dialog:allow-open",
    "store:allow-reload",
    "store:allow-load",
    "store:default",
    "oauth:allow-start",
    "oauth:allow-cancel",
    "updater:default",
    "clipboard-manager:allow-write-text",
    "log:default",
    "sql:default",
    "sql:allow-execute",
    {
      "identifier": "fs:allow-rename",
      "allow": [
        {
          "path": "$HOME/**/*"
        }
      ]
    },
    {
      "identifier": "fs:allow-rename",
      "deny": [
        {
          "path": "$HOME/.config/**/*"
        }
      ]
    },
    {
      "identifier": "fs:allow-exists",
      "allow": [
        {
          "path": "$APPDATA/*"
        }
      ]
    },
    {
      "identifier": "fs:allow-appdata-write",
      "allow": [
        {
          "path": "$APPDATA/*"
        }
      ]
    },
    {
      "identifier": "fs:allow-picture-read-recursive",
      "allow": [
        {
          "path": "$PICTURE/Mylenti/*"
        }
      ]
    },
    {
      "identifier": "fs:allow-picture-write-recursive",
      "allow": [
        {
          "path": "$PICTURE/Mylenti/*"
        }
      ]
    },
    {
      "identifier": "fs:allow-public-meta-recursive",
      "allow": [
        {
          "path": "$PICTURE/Mylenti/*"
        }
      ]
    },
    {
      "identifier": "fs:scope-font-index",
      "allow": [
        {
          "path": "$FONT/*"
        }
      ]
    },
    {
      "identifier": "fs:scope-log-index",
      "allow": [
        {
          "path": "$LOG/*"
        }
      ]
    },
    "window-state:default"
  ]
}
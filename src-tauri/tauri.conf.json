{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Mylenti",
  "version": "0.1.0",
  "identifier": "com.khoiw04.mylenti",
  "build": {
    "frontendDist": "../.output/public",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun build.ts && python build.py && python download-cloudflare.py"
  },
  "app": {
    "windows": [
      {
        "title": "Mylenti",
        "width": 1100,
        "height": 800,
        "center": true,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "create": true,
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' http://localhost:3000 http://127.0.0.1:3000 http://localhost:4455 http://127.0.0.1:4455 http://localhost:4545 http://127.0.0.1:4545 http://localhost:6000 http://127.0.0.1:6000 http://ipc.localhost ws: ipc:; img-src 'self' data: blob:; script-src 'self';",
      "assetProtocol": {
        "enable": true,
        "scope": [
          "C:/**/*"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "dmg", "app", "deb", "appimage"],
    "createUpdaterArtifacts": true,
    "resources": [".output"],
    "externalBin": ["bin/donate_voice", "bin/node_server", "bin/cloudflared"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "active": true,
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDMwRUY5NkYzQThDOTIwMUYKUldRZklNbW84NWJ2TUxxbnN3RGMzRzNROFZIbUNUYXlrOGRjSis0dGJNeS9uSTlXTFZYa2pEWFgK",
      "endpoints": [
        "https://github.com/khoiw04/Mylenti_Application/releases/latest/download/latest.json"
      ]
    },
    "windows": {
      "installMode": "passive"
    },
    "sql": {
      "preload": ["sqlite:app.db"]
    }
  }
}
